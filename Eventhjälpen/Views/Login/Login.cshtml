
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form action="LoginController/LoginAction" method="POST">
    <div class="form-group">
        <label for="exampleInputEmail1">E-postadress</label>
        <input type="email" class="form-control" name="inputMail" aria-describedby="emailHelp">
        <small id="emailHelp" class="form-text text-muted">Vi delar inte din epost med någon.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Lösenord</label>
        <input type="password" class="form-control" name="inputPassword">
    </div>
    <button type="submit" class="btn btn-success">Logga In</button>
</form>